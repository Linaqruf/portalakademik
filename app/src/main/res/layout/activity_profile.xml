            android:fontFamily="@font/regular"
            android:paddingTop="5dp"
            android:text="Alamat"
            android:textColor="@color/flat_black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txAlamatProfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/thin"
            android:text="Komplek Ambun Suri Blok A no 1, Nanggalo, Padang"
            android:textColor="@color/flat_black"
            android:textSize="21dp" />
        <!--            -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:paddingTop="5dp"
            android:text="Tempat Tanggal Lahir"
            android:textColor="@color/flat_black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txTTLProfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/thin"
            android:text="Padang 5 April 1999"
            android:textColor="@color/flat_black"
            android:textSize="21dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:paddingTop="5dp"
            android:text="Agama"
            android:textColor="@color/flat_black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txAgamaProfil"
            android:layout_width="match_parent"
