<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/agenda"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_logo_menu"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/user" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="9dp"
        android:layout_toEndOf="@+id/iv_logo_menu"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txMatkul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="Mata Kuliah"
            android:textColor="@color/flat_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txJadwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txMatkul"
            android:fontFamily="@font/regular"
            android:gravity="right"
            android:text="Jadwal"
            android:textColor="@color/darker_grey"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/txDosenPengampu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txJadwal"
            android:fontFamily="@font/thin"
            android:gravity="right"
            android:text="Dosen Pengampu"
            android:textColor="@color/flat_black"
            android:textSize="14sp" />


    </LinearLayout>


</RelativeLayout>